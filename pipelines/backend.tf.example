# Example backend configuration for Azure Storage
# This file will be generated by the terraform-backend-setup workflow
# Copy this to terraform/backend.tf after running the setup workflow

terraform {
  backend "azurerm" {
    resource_group_name  = "rg-terraform-state"
    storage_account_name = "tfstateaks"
    container_name       = "tfstate"
    key                  = "aks.terraform.tfstate"
  }
}

# Note: You can also use different state files for different environments:
# - aks-dev.terraform.tfstate
# - aks-staging.terraform.tfstate  
# - aks-prod.terraform.tfstate 